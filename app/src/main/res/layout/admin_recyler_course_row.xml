<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="397dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="404dp"
            android:layout_height="match_parent">

            <Space
                android:id="@+id/space2"
                android:layout_width="399dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="2dp" />

            <TextView
                android:id="@+id/admin_course_recycler_name"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:ems="10"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/admin_course_recycler_code"
                app:layout_constraintEnd_toStartOf="@+id/admin_course_recycler_edit_button"
                app:layout_constraintStart_toEndOf="@+id/textViewAdminRecyclerGenericTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewRecyclerCourseCode"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:ems="10"
                android:text="Course code: "
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/admin_course_recycler_code"
                app:layout_constraintStart_toStartOf="@+id/textViewAdminRecyclerGenericTitle"
                app:layout_constraintTop_toTopOf="@+id/admin_course_recycler_code" />

            <TextView
                android:id="@+id/textViewAdminRecyclerGenericTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Course name: "
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/admin_course_recycler_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/admin_course_recycler_name"
                app:layout_constraintVertical_bias="0.483" />

            <TextView
                android:id="@+id/admin_course_recycler_code"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/space2"
                app:layout_constraintEnd_toStartOf="@+id/admin_course_recycler_edit_button"
                app:layout_constraintStart_toEndOf="@+id/textViewRecyclerCourseCode" />

            <ImageButton
                android:id="@+id/admin_course_recycler_edit_button"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/admin_course_recycler_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.511"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <TextView
                android:id="@+id/textViewHorizontalLine"
                android:layout_width="424dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:text="________________________________________________________________________________"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/space2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/space2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>