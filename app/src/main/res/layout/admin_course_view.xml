<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/course_icon"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/course_icon"
        android:text="Course name: "
        android:textStyle="bold"
        android:textColor="@color/text01"
        tools:text="Course name"
        />

    <TextView
        android:id="@+id/course_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/course_icon"
        android:layout_below="@id/course_name"
        android:text="Course code: "
        android:textColor="@color/text01"
        />

    <TextView
        android:id="@+id/course_sessions_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/course_icon"
        android:layout_below="@id/course_code"
        android:text="Session count: "
        android:textColor="@color/text01"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/course_icon"
        android:layout_marginTop="10dp"
        android:background="@color/text01"
        />

</RelativeLayout>